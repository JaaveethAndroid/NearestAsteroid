<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.NearEarthAsteroids.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextAppearance.NearEarthAsteroids.Toolbar.Text" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.NearEarthAsteroids" parent="android:Widget" />

    <style name="Widget.NearEarthAsteroids.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="borderWidth">0dp</item>
        <item name="iconTint">@color/gray_700</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="ThemeOverlay.NearEarthAsteroids.Card" parent="">
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorSurface">@color/purple_light</item>
        <item name="colorOnSurface">@color/purple_900</item>
    </style>

    <style name="Widget.NearEarthAsteroids.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.NearEarthAsteroids.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NearEarthAsteroids.MediumComponent</item>
    </style>

    <style name="Widget.NearEarthAsteroids.AsteroidInfoTextView.Label" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/smaller_spacing</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:minHeight">@dimen/min_size_control</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.NearEarthAsteroids.AsteroidInfoTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/normal_spacing</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:minHeight">@dimen/min_size_control</item>
    </style>
    
    <style name="Widget.NearEarthAsteroids.AsteroidInfoTextView.OrbitInfo">
        <item name="android:layout_marginTop">@dimen/normal_spacing</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:maxLines">@null</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>
</resources>